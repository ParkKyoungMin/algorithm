class Solution {
    public int[] solution(long n) {
        String str = Long.toString(n);
        int length = str.length();  
        int[] answer = new int[length];

        for (int i = 0; i < length; i++){
            
            answer[i] = Character.getNumericValue(str.charAt(length - 1 -i));
       
        }
        
        return answer;
    }
}

